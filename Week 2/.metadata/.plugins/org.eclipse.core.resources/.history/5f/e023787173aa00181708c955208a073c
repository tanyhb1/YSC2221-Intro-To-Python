#Complete Q1a below
def nChooseK(n,k):
    x, y, z = 1, 1, 1
    for i in range(1, n+1):
        x *= i
    for i in range(1, k+1):
        y *= i
    for i in range(1, n-k+1):
        z *= 1
    return(x/(y*z))
    

